{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",              // <<–– muy importante
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node",
      "@cucumber/cucumber",
      "@playwright/test"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "test/**/*"        // <–– incluye tu carpeta de tests
  ],
  "exclude": ["node_modules"]
}
